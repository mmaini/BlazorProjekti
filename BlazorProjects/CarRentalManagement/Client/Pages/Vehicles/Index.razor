@page "/vehicles/"
@attribute [Authorize]
    <HeadingComponent Text="Vozila" />

    <br />

    <a href="/vehicles/create" class="btn btn-secondary">
        <span class="oi oi-plus"></span>
        Unos novog vozila
    </a>
    <br />
    <br />

    @if (Vehicles == null)
    {
        <div class="alert alert-info">Učitavanje vozila...</div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Proizvođač</th>
                    <th>Model</th>
                    <th>Godina</th>
                    <th>Dnevni najam</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vehicle in Vehicles)
                {
                    <tr>
                        <td>@vehicle.Make.Name</td>
                        <td>@vehicle.Model.Name</td>
                        <td>@vehicle.Year</td>
                        <td>@vehicle.RentalRate</td>
                        <td>
                            <a href="/vehicles/view/@vehicle.Id" class="btn btn-primary">
                                <span class="oi oi-book"></span>
                            </a>
                            <a href="/vehicles/edit/@vehicle.Id" class="btn btn-warning">
                                <span class="oi oi-pencil"></span>
                            </a>
                            <button class="btn btn-danger" @onclick="@(()=>Delete(vehicle.Id))">
                                <span class="oi oi-delete"></span>
                            </button>

                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
    

    @code {
        
    }
