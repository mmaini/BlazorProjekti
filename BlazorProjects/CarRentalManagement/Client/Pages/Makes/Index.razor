@page "/makes/"
@attribute [Authorize]
    <HeadingComponent Text="Proizvođači" />
    <br />
    <a href="/makes/create" class="btn btn-secondary">
        <span class="oi oi-plus"></span>
        Unos novog proizvođača
    </a>
    <br />
    <br />
    @if (Makes == null)
    {
        <div class="alert alert-info">Učitavanje proizvođača...</div>
    }
    else
    {
        <table class="table ">
            <thead>
                <tr>
                    <th>Naziv</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var make in Makes)
                {
                    <tr>
                        <td>@make.Name</td>
                        <td>
                            <a href="/makes/view/@make.Id" class="btn btn-primary">
                                <span class="oi oi-book"></span>
                            </a>
                            <a href="/makes/edit/@make.Id" class="btn btn-warning">
                                <span class="oi oi-pencil"></span>
                            </a>
                            <button class="btn btn-danger" @onclick="@(()=>Delete(make.Id))">
                                <span class="oi oi-delete"></span>
                            </button>

                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }


    @code {
        
    }
